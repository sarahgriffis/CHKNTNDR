.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
  %h2 Log In
  %br
  %br
  =link_to '<i class="fa fa-linkedin"></i>Sign in via LinkedIn'.html_safe, user_omniauth_authorize_path(:linkedin), :class => 'btn btn-block btn-social btn-linkedin'

  %br
  %hr
  %br

  = simple_form_for(resource, as: resource_name, url: session_path(resource_name), :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } } )  do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true
      = f.input :password, required: false
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?

    .form-actions
      = f.button :submit, "Log In"

  = render "devise/shared/links"
