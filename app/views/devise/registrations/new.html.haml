.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-3
  %h2 Sign Up
  %br
  %br
  =link_to '<i class="fa fa-linkedin"></i>Sign up via LinkedIn'.html_safe, user_omniauth_authorize_path(:linkedin), :class => 'btn btn-block btn-social btn-linkedin'

  %br
  %hr
  %br

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name),  :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } } ) do |f|
    = f.error_notification
    .form-inputs
      = f.input :email, required: true, autofocus: true
      = f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable)
      = f.input :password_confirmation, required: true
      = f.input :first_name, required: true
      = f.input :last_name
      = f.input :industry
      = f.input :job_title
      = f.input :home_city
      f.input :user_id

    .form-actions
      = f.button :submit, "Sign up"

  = render "devise/shared/links"

