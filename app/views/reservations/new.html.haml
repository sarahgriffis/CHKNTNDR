.col-sm-4.col-sm-offset-4
  %h1 What your are dining interests?
  %br
  %br
  %p What city are you interested in dining in?
  = simple_form_for @reservation,  :defaults => { :wrapper_html => {:class => 'form-group'}, :input_html => { :class => 'form-control' } } do |f|
    = f.input :city, priority: [ "New York" ], collection: [ "Boston", "Chicago", "New York", "Philadelphia","Washington, DC", "San Francisco","London","Paris"], required: true
    %br
    %p Do you prefer an alcoholic drink with dinner?
    = f.input :prefer_drinks, as: :select
    %br
    %p When are you interested in dining?
    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
    = f.input :preferred_date_start, label: 'Start Date', as: :string, :input_html => { :class => 'form-control datepicker col-span-3', :id => 'todate', :value => Date.today}
    = f.input :preferred_date_end, label: 'End Date', as: :string, :input_html => { :class => 'form-control datepicker col-span-3', :id => 'fromdate', :value => Date.today + 30}
    </span>
    %br
    %p What time would you like to eat?
    = f.input :preferred_reservation_time, label: 'Reservation Time', as: :time,  minute_step: 30, :ampm => true
    %br
    %br
    = f.button :submit, :class => "btn primary"

:javascript
  $('#fromdate').datepicker({
  format: "yyyy-mm-dd",
  todayHighlight: true,
  autoclose: true,
  }); ;

  $('#todate').datepicker({
  format: "yyyy-mm-dd",
  todayHighlight: true,
  autoclose: true,
  }); ;
