.col-md-6.col-md-offset-3.col-sm-6.col-sm-offset-3
  - if r.inactived_at.nil?
    %p= "City : #{r.city}"
    %p= "Dates : #{r.preferred_date_start} to #{r.preferred_date_end}"
    %p= "Drinks : #{r.prefer_drinks}"
    %p= "Dining Time : #{r.preferred_reservation_time.strftime("%I:%M %p")}"
    = link_to 'Inactivate', inactivate_reservation_path(r), method: :put, data: {confirm: "Are you sure?"}

    %br
    = link_to 'Find Matches', find_matches_path(r)
