              %li.hellomessage Hello, #{current_user.first_name.humanize}!
              %li
                = link_to 'Create', new_reservation_path
              %li
                = link_to 'Manage', reservations_path

              %li
                = link_to 'Sign Out', destroy_user_session_path, method: :delete
