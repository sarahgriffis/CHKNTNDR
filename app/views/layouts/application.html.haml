    .navbar.navbar-default{:role => 'navigation'}
      .container-fluid
        .navbar-header
          .navbar-brand= link_to 'CHKNTNDR', root_path

          %button.navbar-toggle{'type' => 'button', 'data-toggle' => "collapse",  'data-target' => "#navbartarget"}
